<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="@dimen/activity_horizontal_margin"
                  android:paddingRight="@dimen/activity_horizontal_margin"
                  android:paddingTop="@dimen/activity_vertical_margin"
                  android:paddingBottom="@dimen/activity_vertical_margin"
                  android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INTENT SERVICE"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>

        <Button
            android:id="@+id/start_intentservice_button"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Start (i.e send Intent) to IntentService" />

        <Button
            android:id="@+id/bind_intentservice_button"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Bind to IntentService" />

        <Button
            android:id="@+id/message_intentservice_button"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Send Message to IntentService" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Click me to see if UI thread is responding!"/>

    </LinearLayout>

</ScrollView>

